	<div class="panel">
		<div class="tab-content question-form<%= id %>">
			<form id="true-false-form<%= id %>" class="form-horizontal widget-comments panel-body tab-pane fade active in">
				<div class="form-group">
					<label class="col-sm-2 control-label">Câu hỏi</label>
					<div class="col-sm-10">
						<textarea rows="3" class="elastic form-control" data-input="question-input" name="question"><%= question %></textarea>
						<p class="help-block">Điền câu hỏi vào khung.<span></span></p>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Đáp án</label>
					<div class="col-sm-10">
						<label class="checkbox-inline checkbox-success">
						<% if(answers.length > 0) { %>
							<input type="checkbox" data-input="answer" class="styled" <%= answers[0].is_correct ? 'checked' : '' %>>Đúng
						<%	} else { %>
							<input type="checkbox" data-input="answer" class="styled">Đúng
						<%	} %>
						</label>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Mô tả</label>
					<div class="col-sm-10 has-feedback">
						<textarea rows="3" class="elastic form-control" data-input="info-input" name="info"><%= info %></textarea>
						<p class="help-block">Điền mô tả về câu hỏi vào khung.<span></span></p>
					</div>
				</div>
			</form>

			<form id="one-answer-form<%= id %>" class="form-horizontal widget-comments panel-body tab-pane fade">
				<div class="form-group">
					<label class="col-sm-2 control-label">Câu hỏi</label>
					<div class="col-sm-10 has-feedback">
						<textarea rows="3" class="elastic form-control" data-input="question-input" name="question"><%= question %></textarea>
						<i data-action="put-attachment" class="icon-link form-control-feedback"></i>
						<p class="help-block">Điền câu hỏi vào khung.<span></span></p>
