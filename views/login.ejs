<div class="login-wrapper">
	<form action="/login" role="form" method="post">
		<div class="popup-header">
			<a href="#" class="pull-left"><i class="icon-user-plus"></i></a>
			<span class="text-semibold">Người dùng</span>
			<div class="btn-group pull-right">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-cogs"></i></a>
                <ul class="dropdown-menu icons-right dropdown-menu-right">
					<li><a href="#"><i class="icon-support"></i>Hỗ trợ</a></li>
                </ul>
			</div>
		</div>
		<div class="well">
			<div class="form-group has-feedback">
				<label>Tài khoản</label>
				<input type="text" name="username" class="form-control" placeholder="Tài khoản">
				<i class="icon-users form-control-feedback"></i>
			</div>

			<div class="form-group has-feedback">
				<label>Mật khẩu</label>
				<input type="password" name="password" class="form-control" placeholder="Mật khẩu">
				<i class="icon-lock form-control-feedback"></i>
			</div>

			<div class="row form-actions">
				<div class="col-xs-6">
					<div class="checkbox checkbox-success">
					<label>
						<input type="checkbox" class="styled">
						Ghi nhớ
					</label>
					</div>
				</div>

				<div class="col-xs-6">
					<button type="submit" class="btn btn-warning pull-right"><i class="icon-menu2"></i> Đăng nhập</button>
				</div>
			</div>
		</div>
	</form>
	<script>
		$('input[name="username"]').focus()
	</script>
</div>